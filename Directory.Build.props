<Project>
  <Import Project="tools/Lombiq.Analyzers/Build.props"/>

  <PropertyGroup>
    <!-- This setting prevents .stylelintrc files from being created in projects that use Lombiq Node.js Extensions.
         Instead, we use a global .stylelintrc file at the solution root. -->
    <NodeJsExtensionsCreateStylelintConfigurationFile>false</NodeJsExtensionsCreateStylelintConfigurationFile>
  </PropertyGroup>

  <!-- Copying the Lombiq logo as an icon to all NuGet-published projects. -->
  <Target Name="Copy NuGet icon" AfterTargets="AfterResolveReferences" Condition="'$(PackageLicenseFile)' != ''">
    <Copy SourceFiles="$(MSBuildThisFileDirectory)LombiqSymbolLogoColorWhiteFlaskSquareForNuGetPackages.png"
          DestinationFiles="$(ProjectDir)NuGetIcon.png"
          SkipUnchangedFiles="true" />
  </Target>
</Project>
