<Project>
  <PropertyGroup>
    <!-- This setting prevents .stylelintrc files from being created in projects that use Lombiq Node.js Extensions.
         Instead, we use a global .stylelintrc file at the solution root. -->
    <NodeJsExtensionsCreateStylelintConfigurationFile>false</NodeJsExtensionsCreateStylelintConfigurationFile>
    <!-- This setting prevents .eslintrc files from being created in projects that use Lombiq Node.js Extensions.
         Instead, we use a global .eslintrc file at the solution root. -->
    <NodeJsExtensionsCreateESLintConfigurationFile>false</NodeJsExtensionsCreateESLintConfigurationFile>
  </PropertyGroup>

  <!-- Copying the Lombiq logo as an icon to all NuGet-published projects. -->
  <Target Name="Copy NuGet icon" AfterTargets="AfterResolveReferences" Condition="'$(PackageLicenseFile)' != ''">
    <Copy SourceFiles="$(MSBuildThisFileDirectory)LombiqSymbolLogoColorWhiteFlaskSquareForNuGetPackages.png"
          DestinationFiles="$(ProjectDir)NuGetIcon.png"
          SkipUnchangedFiles="true" />
  </Target>

  <!-- Uncomment this to switch to how NuGet-publishing GitHub Actions builds work, including referencing Lombiq NuGet
       package dependencies instead of submodules. -->
  <!-- <PropertyGroup>
    <NuGetBuild>true</NuGetBuild>
  </PropertyGroup> -->

  <Import Project="tools/Lombiq.Analyzers/Build.props" Condition="'$(NuGetTestbed)' != 'true'" />
</Project>
